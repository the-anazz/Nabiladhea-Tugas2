<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".register">

    <TextView
        android:id="@+id/freg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/fuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freg"
        android:layout_margin="20dp"
        android:background="#04450d"
        android:hint="Masukkan Username"
        android:textColorHint="@color/white"
        android:padding="16dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/femail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fuser"
        android:layout_margin="20dp"
        android:background="#04450d"
        android:hint="Masukkan Email"
        android:textColorHint="@color/white"
        android:padding="16dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/fpass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/femail"
        android:layout_margin="20dp"
        android:background="#04450d"
        android:hint="Masukkan Password"
        android:textColorHint="@color/white"
        android:padding="16dp"
        android:textColor="@color/white"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/bttreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fpass1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Daftar"
        android:textSize="20sp"
        android:textColor="#04450d"
        android:backgroundTint="#c2fcc7"/>

</RelativeLayout>
